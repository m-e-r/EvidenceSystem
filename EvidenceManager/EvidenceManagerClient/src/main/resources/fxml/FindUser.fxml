<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLUser.FXMLFindUserController">
   <children>
      <VBox layoutX="262.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TextField fx:id="searchTF" prefHeight="23.0" prefWidth="600.0" promptText="Search (id, name or rank)">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
            </TextField>
            <TableView fx:id="usersTV" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="TVidCol" minWidth="-1.0" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="TVNameCol" minWidth="-1.0" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="TVRankCol" minWidth="-1.0" prefWidth="100.0" text="Rank" />
              </columns>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="searchBTN" mnemonicParsing="false" onAction="#search" text="Search">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="updateBTN" mnemonicParsing="false" onAction="#update" text="Update list">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
