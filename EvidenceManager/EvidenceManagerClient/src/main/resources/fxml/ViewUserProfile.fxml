<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLUser.FXMLViewUserProfileController">
   <children>
      <VBox layoutX="112.0" layoutY="31.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" prefHeight="50.0" prefWidth="600.0" text="User profile">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="TOP_CENTER">
                     <children>
                        <Label text="Id" />
                        <TextField fx:id="idTF" editable="false" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0">
                     <children>
                        <Label text="Name" />
                        <TextField fx:id="nameTF" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutY="10.0">
                     <children>
                        <Label text="Birthday" />
                        <TextField fx:id="birthdayTF" editable="false" prefHeight="26.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="60.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="TOP_CENTER">
                     <children>
                        <Label text="Username" />
                        <TextField fx:id="usernameTF" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0">
                     <children>
                        <Label text="Password" />
                        <TextField fx:id="passwordTF" onMouseEntered="#handleClearPassTF" onMouseExited="#handleFillPassTF" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutY="10.0">
                     <children>
                        <Label text="Home adress" />
                        <TextField fx:id="adressTF" prefHeight="26.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="160.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefWidth="200.0">
                     <children>
                        <Label text="Rank" />
                        <TextField fx:id="roleTF" maxWidth="-Infinity" minHeight="-Infinity" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefWidth="200.0">
                     <children>
                        <Label text="Station" />
                        <TextField fx:id="stationTF" editable="false" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" layoutY="10.0" prefWidth="200.0">
                     <children>
                        <Label text="Is validated" />
                        <TextField fx:id="isValidatedTF" editable="false">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="editProfilBTN" mnemonicParsing="false" onAction="#saveEditProfle" prefWidth="600.0" text="Edit profile">
               <VBox.margin>
                  <Insets left="200.0" right="200.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
